@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_admin.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    
    <style>
        body {
            background-color: #f8f9fa;
        }

        .card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            font-size: 1.5rem;
            font-weight: bold;
            background-color: #4e73df;
            color: white;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
        }

        .card-body {
            padding: 1.5rem;
        }

        .btn-primary, .btn-dark {
            width: 100%;
            font-size: 1rem;
            font-weight: bold;
            border-radius: 5px;
        }

        .btn-primary {
            background-color: #4e73df;
            border-color: #4e73df;
        }

            .btn-primary:hover {
                background-color: #2e59d9;
                border-color: #2653d4;
            }

        .btn-dark {
            background-color: #1cc88a;
            border-color: #1cc88a;
        }

            .btn-dark:hover {
                background-color: #17a673;
                border-color: #169e66;
            }

        .btn-edit, .btn-delete {
            color: white;
            border: none;
            border-radius: 5px;
            padding: 5px 10px;
        }

        .btn-edit {
            background-color: #4e73df;
        }

            .btn-edit:hover {
                background-color: #2e59d9;
            }

        .btn-delete {
            background-color: #e74a3b;
        }

            .btn-delete:hover {
                background-color: #c82333;
            }

        .form-group label {
            font-weight: bold;
            font-size: 1.1rem;
        }

        .table thead th {
            text-align: center;
            background-color: #4e73df;
            color: white;
        }

        .table tbody td {
            text-align: center;
        }

        .container {
            margin-top: 50px;
        }

        .alert {
            display: none;
        }
    </style>
</head>
<body>

    <div id="divResult" class="alert alert-success" role="alert">
        <!-- Success or error message will be shown here -->
    </div>

    <div class="container">
        <h1 class="mb-4 text-center">Ürün İşlemleri</h1>
        <div class="row">
            <div class="col-md-8">
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead class="thead-dark">
                            <tr>
                                <th>Id</th>
                                <th>Kategori Adı</th>
                                <th>Resim Id</th>
                                <th>Adı</th>
                                <th>Fiyat</th>
                                <th>Durum</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody id="urunlistesi">
                            <!-- Dynamic content will be injected here -->
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        Ürün Ekle
                    </div>
                    <div class="card-body">
                        <p class="text-muted">Bir Resim İd Sadece 1 tane ürüne Sahip olabilir!</p>
                        <form id="kategoriForm">
                            <div class="form-group">
                                <label for="name">Adı</label>
                                <input type="text" class="form-control" id="name" name="name" placeholder="Ürün adı girin">
                            </div>
                            <div class="form-group">
                                <label for="isActive">Durumu</label>
                                <select class="form-control" id="isActive" name="isActive">
                                    <option value="true">Aktif</option>
                                    <option value="false">Pasif</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="kategoriListesi">Kategori Seçin</label>
                                <select class="form-control" id="kategoriListesi">
                                    <option value="">Kategori Seçin</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="resimListesi">Resim Id Seçin</label>
                                <select class="form-control" id="resimListesi">
                                    <option value="">Resim Seçin</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="fiyat">Fiyat</label>
                                <input type="number" class="form-control" id="fiyat" name="fiyat" placeholder="Fiyat Giriniz">
                            </div>
                            <button id="ekle" class="btn btn-primary mt-3">Kaydet</button>
                            <button id="guncelle" class="btn btn-dark mt-3" style="display: none;">Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/ajax/product.js"></script>

</body>
</html>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">